<?xml version="1.0" encoding="utf-8"?>
<!--This code references https://www.scaledrone.com/blog/android-chat-tutorial/-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/other_message_avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/user_blank_avatar"/>

    <TextView
        android:id="@+id/other_massage_name"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/other_message_avatar"
        android:layout_alignTop="@+id/other_message_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_message_body"
        android:layout_below="@+id/other_massage_name"
        android:layout_alignLeft="@+id/other_massage_name"
        android:background="@drawable/other_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />
</RelativeLayout>